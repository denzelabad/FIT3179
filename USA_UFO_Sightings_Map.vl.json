{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 500,
  "title": "Prevalence of UFO Sightings in the USA",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/denzelabad/FIT3179/main/MapUSA.geo.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "projection": {"type": "albersUsa"},
      "mark": {"type": "geoshape", "fill": "black", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/denzelabad/FIT3179/main/ufo_sighting_data.csv"
      },
      "projection": {"type": "albersUsa"},
      "transform": [{"filter": {"field": "country", "equal": "us"}}],
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"value": 7},
        "color": {"value": "#329a51"}
      }
    }
  ],
  "config": {}
}